<!DOCTYPE html>
<html>
  <head>
    <%- include ("partials/head") %>
    <link rel='stylesheet' href='/stylesheets/index.css'>
  </head>
  <body>
    <%- include ("partials/header") %>

    <h1>Home</h1>
    <div class="vote-container">
      <div class="home-left">
        <h2 class="vote-state">진행중</h2>
        <div class="grid-container">
          <% for (let i = 0; i < validatedVote.length; i++) { %>
            <div class="grid-box">
              <form action="/votings/<%= validatedVote[i]._id %>" method="GET">
                <div class="title-box">
                  <span><%= validatedVote[i].title %></span>
                </div>
                <div class="info-box">
                  <span>생성자:  <%= validatedVote[i].creater.nickname %></span>
                  <span>종료 시간:  <%= validatedVote[i].convertedExpiredAt %></span>
                </div>
                <button class="grid-button" type="submit">투표 하기</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
      <div class="home-right">
        <h2 class="vote-state">완료</h2>
        <div class="grid-container">
          <% for (let i = 0; i < expiredVote.length; i++) { %>
            <div class="grid-box">
              <form action="/votings/<%= expiredVote[i]._id %>/result" method="GET">
                <div class="title-box">
                  <span><%= expiredVote[i].title %></span>
                </div>
                <div class="info-box">
                  <span>생성자:  <%= expiredVote[i].creater.nickname %></span>
                  <span>종료 시간:  <%= expiredVote[i].convertedExpiredAt %></span>
                </div>
                <button class="grid-button" type="submit">결과 보기</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <%- include ("partials/footer") %>
  </body>
</html>
