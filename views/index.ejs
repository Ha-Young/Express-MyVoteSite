    <div>
      <% if (allVotings) { %>
        <% allVotings.forEach(voting => { %>
          <ul>
            <li>제목 <%= voting.title %></li>
            <li>작성자 <%= voting.author %></li>
            <li>만료 날짜 <%= new Date(voting.endDate) %></li>
          </ul>
        <% }); %>
      <% } %>
    </div>
  </div>
</body>

</html>

