<div class="body-container small-container">
  <h1>Log In</h1>
  <form class="form" action="/auth/login" method="POST">
    <div class="alert-msg">
      <%= message %>
    </div>
    <div class="input-container">
      <label for="email">email : </label>
      <input name="email" />
    </div>
    <div class="input-container">
      <label for="password">password : </label>
      <input name="password" />
    </div>
    <button type="submit">확인</button>
  </form>
</div>
