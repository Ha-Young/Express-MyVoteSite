<div class="page-wrapper">
  <div class="login">
    <div class="login-form">
      <h1>Log In</h1>

      <form method="post" action="/login">
        <div class="login-input-set">
          <p>
            <input 
              class="login-input" 
              type="email" 
              name="email" 
              placeholder="&#xf0e0; email"
            >
          </p>
          <p>
            <input 
              class="login-input" 
              type="password" 
              name="password" 
              placeholder="&#xf084; Password"
            >
          </p>
        </div>
        <p>
          <input class="login-button" type="submit" value="Login">
        </p>
        <p class="signup-button">
          <a class="signup-button-content" href="/signup">join</a>
        </p>
        <p class="github-button">
          <a class="github-button-content" href="/login/github">
            Sign In with Github
            <i class="fab fa-github"></i>
          </a>
        </p>
      </form>
    </div>
  </div>
</div>
