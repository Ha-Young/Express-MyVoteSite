<!DOCTYPE html>
<html>
  <head>
    <%- include ('partials/head') %>
    <link rel="stylesheet" href="/stylesheets/loginSignup.css" />
  </head>
  <body>
    <%- include ('partials/header') %>

    <div class="card">
      <form action="/login" method="POST">
        <h2 class="title"> Log in</h2>
        <p class="subtitle">Don't have an account? <a href="/signup"> sign Up</a></p>

        <div class="social-login">
            <a class="github-btn" href="login/github">
              <p class="btn-text">Sign in with Github</p>
              <img alt="Github" src="/images/githubLogoBlack.png" />
            </a>
        </div>

        <p class="or"><span>or</span></p>

        <div class="email-login">
            <label for="email"> <b>Email</b></label>
            <input type="email" placeholder="Enter Email" id="email" name="email" required>
            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" id="password" name="password" required>
        </div>
        <button class="cta-btn" type="submit">Log In</button>
      </form>
      <h2><%= messages.error ? messages.error : ""  %></h2>
  </div>

  <%- include ('partials/footer') %>
  </body>
</html>
