<!-- 제목, 생성자, 만료 날짜 및 시간, 진행 중 여부, 투표 선택 사항 -->
<div class="vote-detail-wrapper">
  <div class="vote-detail-cont grid-split-two">
    <div class="vote-result-column vote-info">
      <h2 class="vote-title"><%= vote.title %></h2>
      <div class="vote-stage">
        <span class="stage live"></span>
      </div>
      <div class="vote-infos-list">
        <div class="vote-info-row">
          <span class="vote-info-label">작성자</span>
          <span class="vote-info-content"><%= vote.creator.name %></span>
        </div>
        <div class="vote-info-row">
          <span class="vote-info-label">만료날짜</span>
          <span class="vote-info-content"><%= vote.expire_datetime %></span>
        </div>
        <div class="vote-info-row">
          <span class="vote-info-label">투표 상태</span>
          <span class="vote-info-content"><%= vote.is_process %></span>
        </div>
      </div>
      <button class="vote-info-back-btn">
        <i class="fas fa-step-backward"></i>
      </button>
    </div>
    <div class="vote-result-column vote-detail-option-wrapper">
      <div class="vote-detail-option-content">
        <h2>투표 선택</h2>
        <ul class="vote-detail-option-list">
          <% for (let i = 0; i < vote.vote_options.length; i++) { %>
            <li>
              <input class="vote-option-checkbox" type="checkbox" name="checkbox-<%= i %>" id="checkbox-<%= i %>">
              <label for="checkbox-<%= i %>">
                <%= vote.vote_options[i].title %>
              </label>
              <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                <path d="M 10 50 L 40 86 L 90 10" stroke="#ffff" stroke-dasharray="140" stroke-dashoffset="140"></path>
              </svg>
            </li>
          <% } %>
        </ul>
      </div>
      <button class="vote-submit-btn">투표하기</button>
    </div>
  </div>
</div>

<script src="/javascripts/utils/path.js"></script>
<script src="/javascripts/utils/cookie.js"></script>
<script src="/javascripts/utils/login.js"></script>
<script src="/javascripts/voteDetailPage.js"></script>
<script src="/javascripts/voteDetailOptionScript.js"></script>
