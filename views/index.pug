extends layout
block append head
  link(rel='stylesheet' href='/css/main.min.css')
block content
  h1= votehere
  if (user)
    p Hello #{user.name}
    if (user.avatarUrl)
      img(src=`${user.avatarUrl}`)
    else 
      img(src='https://i.pravatar.cc/100')
    p #{user.email}
  else
    p HELLO GUEST
  if (user)
    form(action='/auth/logout?_method=DELETE' method='POST')
      button(type='submit') LOGOUT
  else
    form(action='/auth/github' method='GET')
      button(type='submit') LOGIN WITH GITHUB
    form(action='/auth/signup' method='GET')
      button(type='submit') SIGN UP
    form(action='/auth/login' method='GET')
      button(type='submit') LOG IN
      
  button(id='plusButton')
    a(href='/vote/new') MAKE NEW VOTE
  ul.all-votes
    if (allVotes)
      each vote in allVotes
        li
          a(href=`/vote/${vote._id}`)
            .eachVote
              h4 #{vote.title}
              p avilable - #{vote.isVotable}
              p expired At - #{vote.expiredAt}
              p by #{vote.creatorName}
