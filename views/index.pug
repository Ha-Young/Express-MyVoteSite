extends layout

block content
  main
    h1= title
    p 언제든 투표를 만들고, 다른이들의 투표에 참여해 보세요!
    if loginUser
      button.button-vote-creator(onclick="window.location.href = '/votings/new';") 투표 만들기
    -var values = votes;
      each val in values
        div.vote-box(data-id=val._id onclick="window.location.href = 'votings/"+val._id+"';")
          div.vote-title=val.title
          div.vote-creator=val.user.email.split('@')[0]
          div.flex-row
            case val.state
              when 'inProgress'
                div.vote-state-going="진행중"
              when 'done'
                div.vote-state-done="진행완료"
            div.vote-due='투표마감일:'+val.due.toISOString().split("T")[0]+"🕙"+val.due.toTimeString().slice(0, 5)
