extends layout

block content
  link(rel='stylesheet', href='/stylesheets/index.css')
  div(class="wrapper")
    each voting in votings
      div(class="voting-container")
        div(class="nickname-container")
          p #{voting.user.nickname}
          if(voting.is_expired)
            p(class="voting-deadline") 만료됨
          else
            p(class="voting-ongoing") 진행중
        h2 #{voting.title}
        p(class="expiration-date") 만료일 #{moment(voting.deadline).format('YYYY-MM-DD hh:mm a')}
        button
          a(href=`/votings/${voting._id}`) 투표하기
