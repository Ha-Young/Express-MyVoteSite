<div class="body-container small-container">
  <h1 class="bouncy-font">Sign Up</h1>
  <form class="form bouncy-font" action="/auth/signup" method="POST">
    <div class="alert-msg bouncy-font">
      <%= message %>
    </div>
    <div class="input-container">
      <label for="name">name</label>
      <input class="input" name="name" />
    </div>
    <div class="input-container">
      <label for="email">email</label>
      <input class="input" type="email" name="email" />
    </div>
    <div class="input-container">
      <label for="password">password</label>
      <input class="input" type="password" name="password" />
    </div>
    <div class="input-container">
      <label for="passwordConfirm">password confirm</label>
      <input class="input" type="password" name="passwordConfirm" />
    </div>
    <button class="submit-button bouncy-font" type="submit">OK !</button>
  </form>
</div>
