<header>
  <h1 class="title">
    <a href="/">
      VOTING PLATFORM
    </a>
  </h1>

  <div class="right">
    <ul class="profile-list">
      <% if (user) { %>
        <li class="nickname">
          <span>Hello, <%= user.nickname %></span>
        </li>
        <li class="create">
          <form method="GET" action="/votings/new">
            <button class="button" type="submit">CREATE VOTE</button>
          </form>
        </li>
        <li class="my-votings">
          <form method="GET" action="/my-votings">
            <button class="button" type="submit">MY VOTINGS</button>
          </form>
        </li>
        <li class="auth">
          <form method="GET" action="/auth/logout">
            <button class="button" type="submit">LOG OUT</button>
          </form>
        </li>

        <% } else { %>
          <li class="auth">
            <form method="GET" action="/auth/signup">
              <button class="button" type="submit">SIGN UP</button>
            </form>
          </li>
          <li class="auth">
            <form method="GET" action="/auth/login">
              <button class="button" type="submit">LOG IN</button>
            </form>
          </li>
          <% } %>
    </ul>
  </div>

</header>
