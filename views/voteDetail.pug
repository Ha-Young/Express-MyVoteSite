extends ./layouts/layout

block content
  if isAuthor
    a.button.button-fixed#button-delete-vote Delete
  .head-container
    h1= vote.title
    if vote.isExpired
      p.card-expired.tag.black Expired
    else
      p.card-expired.tag.green Progress
    p= vote.author.name
    p= `${vote.expireAt.toLocaleString()}`
  .sub-container
    if vote.isExpired
      h1 투표가 종료되었습니다.⏰
      ul.vote-list.detail
        each item in vote.candidateList
          .card.detail
            p= item.title
            p= item.count
    else if !vote.isExpired && !isParticipated
      form.detail(id='form-cast-vote', method='POST')
        h1 어서 고르세유.😎
        each item, index in vote.candidateList
          label
            if index === 0
              input(type='radio', name='item' value=`${item.title}` checked)
            else
              input(type='radio', name='item' value=`${item.title}`)
            span= item.title
        input.button(type='submit' value='Submit' id='button-casting-vote')
    else if isParticipated
      h1 투표 참여가 완료되었습니다.👏
      if isAuthor
        ul.vote-list.detail
          each item in vote.candidateList
            .card.detail
              p= item.title
              p= item.count
    a.button(href='/') 🏠 Back
  script(src="/javascripts/votingsAPI.js")
