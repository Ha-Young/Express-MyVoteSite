          p.option-title 선택지
          input(type='button' placeholder='+' onclick='addOption()')
          input(type='text' placeholder='선택지1')
          input(type='text' placeholder='선택지2')
        button(type="submit") 투표생성하기
  script(src='/javascripts/newVote.js')
