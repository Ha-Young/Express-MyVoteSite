extends layout

block content
  section
    h2 VOTE RESULT
    .vote-result-wrapper
      .form-box
        p.vote-title #{vote.title}
      .form-box
          ul.vote-info
            li 📅 #{vote.expiration_date.formatted_date}
            li 🖌 #{vote.author.name}
      ul.vote-result.hidden
        each result in stats
          li
            p.title #{result._id}
            p.count #{result.count}
      .chart-wrapper
        if (stats[0].total === 0)
          div.flex-center.empty-result
            p.icon 🙅‍♀️
            p 투표한 사람이 아직 없습니다.
        else
          canvas#vote-chart
      ul.button-list
        if (user)
          li
            button#deleteButton.button.red(type="button") DELETE
        li
          button#backButton.button(type="submit") BACK
  script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js")
  script(src="/javascripts/voteResult.js")
