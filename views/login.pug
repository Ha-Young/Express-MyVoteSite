include mixins/voteList
include mixins/header
head
 link(rel='stylesheet', href='/css/dashboard.min.css')
 script(src='https://kit.fontawesome.com/5fab680b0a.js' crossorigin='anonymous')
.container
  .sidebar
    span.logo V
    a.logo-expand(href='/') Vote Here
    include partials/sidebar.pug
  .wrapper
    +header(user)
    .main-container
      .form-container.anim(style='--delay: .1s')
        h2 LOGIN
        form(action='/auth/login' method='POST')
          .form-group
            label(for='email') Email
            input#email.form-control(type='email' name='email' required)
          .form-group
            label(for='password') Password
            input#password.form-control(type='password' name='password' required)
          .alert.alert-dismissible.alert-danger
          //- TODO: flash? or error message;
          button.btn.btn-primary.submit LOGIN
