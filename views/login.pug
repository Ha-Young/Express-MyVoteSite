extends layout

block content
  section
    h2 Login
    .login-wrapper
      form#login-form
        .form-box
          label(for="email") E-MAIL
          input(id="email" type="email" name="email" placeholder="E-MAIL" autocomplete required)
        .form-box
          label(for="password") PASSWORD
          input(id="password" type="password" name="password" placeholder="PASSWORD" autocomplete required)
      p.validation.hidden
  ul.button-list
    li
      button#loginButton.button.purple(type="submit" form="login-form") LOGIN
    li
      button#googleLoginButton.button.yellow(type="button") LOGIN WITH GOOGLE
    li
      a.button(href="/users/signup") CREATE ACCOUNT
  script(type="module" src="/javascripts/login.js")
