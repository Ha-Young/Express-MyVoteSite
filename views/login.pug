doctype html
html
  head
    link(rel="stylesheet", href="/stylesheets/login.css")
  body
    nav
      ul
        if hasLoggedIn
          li 
            button Vote
          li 
            button New vote
          li 
            button My vote
          li 
            button Logout
        else
          li 
            button Vote
          li 
            button New vote
          li 
            button Login
    main
      form(action="" method="post" class="form")
        h1 Sign up
        hr
        label(for="email") Email
        input(type="text" name="email" required)

        label(for="password") Password
        input(type="password" name="password" required)
        button(type="submit" class="submitButton") Login