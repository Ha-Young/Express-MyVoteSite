extends layout

block content
  h1.login-title 로그인
  div.login-page
    div.form
      form.login-form
        input(type="email" placeholder="email")
        input(type="password" placeholder="password")
        button(type="submit") 로그인
      p.message 아직 회원이 아니세요? 
        a.anchor(href="/signup") 계정생성
      p.error
  script(src='/javascripts/login.js')
