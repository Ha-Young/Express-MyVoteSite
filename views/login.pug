extends layout

block content
  h1.login-title login page
  div.login-page
    div.form
      form.login-form
        input(type="email" placeholder="email")
        input(type="password" placeholder="password")
        button(onclick='confirm()') login
      p.message Not registered? 
        a.anchor(href="/signup") Create an account
  script.
    function confirm(){
      alert('login!')
    }