      <% for(let i = 0; i < voting.items.length; i++) {%>
        <input type="radio" value="<%= voting.items[i].option%>" ><%= voting.items[i].option %></input>
      <%}%>
    </form>
    <a href="/">돌아가기</a>

  </body>
</html>
