<!DOCTYPE html>
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet' href='/stylesheets/style.css')
    title Voting
  body
    div.authwarp
      h1= voting.title
      div= voting.isProceeding
      div.detailBox
        div.detail-author= `- 등록자 | ${voting.createdBy.username}`
        if isAuthor
          div.detail-delete-button 투표삭제
        div= `- 종료일 | ${voting.expiredAt}`
        form(action=`/votings/${voting._id}` method='POST')
          if voting.isProceeding
            each option in voting.options
              div
                input(type='radio' id=`${option.option}` name='option' value=`${option.option}`)
                lable(for=`${option.option}`)=option.option
                if isAuthor
                  lable.count(for=`${option.option}`)=`${option.count} 표`
          else
            each option in voting.options
              div
                input(type='radio' id=`${option.option}` name='option' value=`${option.option}` disabled)
                lable.radio-disabled(for=`${option.option}`)=option.option
                lable.count(for=`${option.option}`)=`${option.count} 표`
          if voting.isProceeding
            div.buttonwrap
              input.button.blue(type='submit')
      div.buttonwrap
        input.button.line-blue(type='button' onclick='location.href=\'/\'' value='< 이전')
