<!DOCTYPE html>
<html>
  <% include ./partial/head %>
  <body>
    <% include ./partial/header %>
    <div class="new-voting">
      <div class="main-sidebar">
        <% include ./partial/userProfile %>
        <div class="main-menu">
          <div class="main-menu-title">
            <h2>MENU</h2>
          </div>
          <a href="/">
            <div class="main-menu-main">
              <span>Main</span>
            </div>
          </a>
          <a href="/votings">
            <div class="main-menu-myvotings">
              <span>My Votings</span>
            </div>
          </a>
          <a href="/logout">
            <div class="main-menu-logout">
              <span>LogOut</span>
            </div>
          </a>
        </div>
      </div>
      <div class="content-container">
        <div class="main-subtitle">
          <h2>New Voting</h2>
        </div>
        <hr>
        <div class="new-voting">
          <form
            class="create-vote-form"
            action="/votings/new"
            method="POST"
          >
            <div class="form-captions">
              <div class="captions-title">Title</div>
              <div class="captions-description">Description</div>
              <div class="captions-expired">Expired Date</div>
              <div class="captions-selections">
                Selections
                <br>
                <button class="selection-add-btn">
                    <i class="fas fa-plus"></i>
                </button>
                <button class="selection-remove-btn">
                    <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="form-inputs">
              <div class="newvote-title">
                <input type="text" name="title" autocomplete="off" required />
              </div>
              <div class="newvote-description">
                <input type="text" name="description" autocomplete="off" required />
              </div>
              <div class="newvote-expired">
                <input type="datetime-local" name="expired_at" autocomplete="off" value="<%= nowDatetime %>" min="<%= nowDatetime %>" required />
              </div>
              <div class="newvote-selections">
                <div class="selection-list">
                  <div class="selection">
                    <input type="text" name="selections" autocomplete="off" required />
                  </div>
                  <div class="selection">
                    <input type="text" name="selections" autocomplete="off" required />
                  </div>
                </div>
              </div>
              <div class="newvote-button">
                <input type="submit" value="submit" />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="/javascripts/newVote.js" ></script>
  </body>
</html>

