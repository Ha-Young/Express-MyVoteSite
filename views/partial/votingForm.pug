extends ../layout.pug

block stylesheet
  link(rel="stylesheet", href="/stylesheets/signup.css")
  link(rel="stylesheet", href="/stylesheets/votingForm.css")

block content
  form(action="/votings/new", method="post")
    - const today = moment().format('yyyy-MM-DDTHH:mm:ss')
    - const minVotingTime = moment().add(1, 'day').format('yyyy-MM-DDTHH:mm:ss')
    input(type="hidden" name="founder" value=user.id)
    .flex
      .icon
        i.fas.fa-envelope
      .textBox
        label(for="title") 투표제목:
        input(type="text" id="title" name="title")
    .flex
      .icon
        i.fas.fa-envelope
      .textBox
        label(for="description") 내 용:
        input(type="text" id="description" name="description")
    .optionsContainer
      label(for="options") 투표옵션:
        span.addOptionBtn +
        input(type="text" name="options" value="옵션1")
        input(type="text" name="options" value="옵션2")
    .flex
      .icon
        i.fas.fa-envelope
      .textBox
        input(
          type="datetime-local"
          id="dueDate"
          name="dueDate"
          value=minVotingTime
          min=today
        )
    .rightSide
      button(type="submit") 투표등록
  script(src="/javascripts/votingForm.js")
