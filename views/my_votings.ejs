<!DOCTYPE html>
<html>
  <head>
    <title>My votings</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/my_votings.css' />
  </head>
  <body>
    <%- include('header') %>
    <div id='body-container'>
      <div id='page-title-text'>
        <h1>My Votings</h1>
      </div>
  
      <table class='voting-list-table'>
        <tr>
          <th>Title</th>
          <th>Creator</th>
          <th>Expiry</th>
          <th>Status</th>
        </tr>
        <% votings.map(voting => { %>
          <tr>
            <td>
              <a href=<%=`/votings/${voting._id}`%>>
                <%= voting.title %>
              </a>
            </td>
            <td><%= voting.authorName %></td>
            <td><%= voting.end_time %></td>
            <td>
              <% if (voting.status === 'active') { %>
                <span class='ongoing-text'>üó≥Ô∏è Ongoing</span>
              <% } else if (voting.status === 'ended') { %>
                <span class='finished-text'>üì¶ Finished</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </table>
      </ul>
    </div>
  </body>
</html>
