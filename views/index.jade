extends layout

block content
  h1 투표목록
  ul(class="votes")
    -votes.forEach((vote) => {
      a(href="/votings/"+vote._id)
        div=vote.title
        div=vote.author
        div(class="expired_at")=vote.expiredAt
        div(class="vote_state")
    -})
  div
    a(href="/auth/logout") logout
  div
    a(href="/votings/my-votings") 내 투표
  div
    a(href="/votings/new") 투표생성
  script(src="/javascripts/votingState.js")
