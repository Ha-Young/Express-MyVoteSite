<!DOCTYPE html>
<html>
  <%- include('partial/head') -%>
  <body>
    <%- include('partial/header') -%>
    <div class="container">
      <h2>New Vote</h2>
      <form action="/votings" class="form" method="POST">
        <p>
          <label for="voting-name">VOTE NAME</label>
          <input type="text" id="voting-name" name="voting_name" required="true" />
        </p>
        <p>
          <label>EXPIRATION</label>
          <input type="date" id="expiration-date" name="expiration_date" required="true" />
        </p>
        <p>
          <input type="time" id="expiration-time" name="expiration_time" required="true" />
        </p>
        <label>OPTIONS</label>
        <fieldset class="options-area">
          <p>
            <input type="text" name="options" required="true" />
          </p>
          <p>
            <input type="text" name="options" required="true" />
          </p>
        </fieldset>
        <div class="buttons-wrap">
          <span class="add-options button">Add options</span>
          <span class="remove-options button danger">Remove options</span>
        </div>
        <div class="buttons-wrap">
          <button type="submit" class="button confirm">SUBMIT</button>
        </div>
      </form>
    </div>
    <%- include('partial/scripts') -%>
  </body>
</html>
