<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
  <%- include('partials/header') %>
  <div class="main-container">
    <form class="form" action="/votings/new" method="post">
      <h1 class="auth-title">New vote</h1>
      <div class="auth-wrap">
        <div class="form-wrap">
          <input type="text" name="title" class="new-field" id="title" autocomplete="off" placeholder="투표 제목" required>
          <% if (error_message !== '') { %>
            <h3><%= error_message %></h3>
          <% } %>
        </div>
        <div class="new-form-column">
          <button id="option-add-btn">+</button>
        </div>
        <div id="options-list"></div>
        <div class="form-last">
        <div class="new-form-column">
        <input type="datetime-local" name="expirationDate" class="expiration" min="<%= minDate %>T00:00"
          pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}" autocomplete="off">
        </div>
        <div class="new-form-column last-button">
          <input type="submit" class="form-submit-button" value="✓">
        </div>
      </div>
      </div>
    </form>
  </div>
  <script src="/javascripts/vote.js"></script>
</body>

</html>