extends layouts/main
include mixins/votingBox

block content
    .main-container
        if votingList.length > 0
            each item in votingList
                a(href=`/votings/${item._id}`).voting-item-box
                    if new Date(item.endDate).getTime() > currentDate.getTime()
                        .abled-voting-box.voting-box
                            +votingBox({
                                title : item.title,
                                creator : userName,
                                endDate : item.endDate,
                                formatDate : `${item.formatDate} 종료`,
                                state : "진행중"
                            })
                    else
                        .disabled-voting-box.voting-box
                            +votingBox({
                                title : item.title,
                                creator : userName,
                                endDate : item.endDate,
                                formatDate : `${item.formatDate} 종료됨`,
                                state : "종료됨",
                            })
        else
            .votings-not-exist-box
                .votings-not-exist 🙅‍♂️ 내가 만든 투표가 없어요 🙅‍♀️
