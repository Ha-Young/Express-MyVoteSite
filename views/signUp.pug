extends layout

block content
  .signUpOutter
    form.joinForm(action="signup" method="POST")
    input.email(type="email" name="email")
    input.password(type="password" name="password")
    input.passwordChecker(type="password" name="password2")
    input.name(type="text" name="name")
    button.joinSubmit(type="submit") submit
