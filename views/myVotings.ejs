<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include("./partials/header.ejs") %>
    <h1><%= title %></h1>
    <% if(myVotingFormats.length > 0) {%>
      <% myVotingFormats.forEach(function(myVotingFormat) { %>
        <div>
            <div>
              <h2><a href="/votings/<%= myVotingFormat._id %>">Vote for <%= myVotingFormat.title %></a></h2>
              <h3>Expire Date: <%= myVotingFormat.expireDate %></h3>
              <h3><%= myVotingFormat.isProceeding ? "Proceeding" : "Finished" %></h3>
            </div>
        </div>
      <% }) %>
    <% } %>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
