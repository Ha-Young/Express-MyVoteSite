<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/global.css">
    <link rel="stylesheet" href="/stylesheets/myVotings.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Do+Hyeon&display=swap">
    <link rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
      integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk"
      crossorigin="anonymous"
    >
    <title><%= title %></title>
  </head>
  <body>
    <%- include("./partials/header.ejs") %>
      <h1 class="myvointg-title"><%= title %>: What I registered</h1>
      <div class="content-wrap">
        <% if (myVotingFormat.length > 0) { %>
          <% myVotingFormat.forEach(function(voting) { %>
            <div class="content-container">
              <a class="my-voting-link" href="/votings/<%= voting._id %>">
                <div class="content">
                  <h2>
                    <%= voting.title %>
                  </h2>
                <h3>Expire at: <%= voting.expireDate %></h3>
                <h3 class="<%= voting.isProceeding ? "proceeding-font" : "finished-font" %>">
                  <%= voting.isProceeding ? "Proceeding..." : "Finished" %>
                </h3>
                </div>
              </a>
            </div>
          <% }) %>
        <% } %>
      </div>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
