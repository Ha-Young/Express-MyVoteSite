doctype html
html
  head
    link(rel="stylesheet", href="/stylesheets/index.css")
  body
    div(class="nav")
      ul
        if hasLoggedIn
          li
            a(href="/") Main
          li
            a(href="/votings/new") New vote
          li
            a(href="/my-votings") My votes
          li
            a(href="/auth/logout") Logout
        else
          li 
            a(href="/") Main
          li 
            a(href="/signup") Signup
          li 
            a(href="/auth/login") Login
    main
      if polls
        div(class="myVotes")
          h1 My votes
        each val, index in polls
          div
            ul
              li
                a(href=`votings/${val.id}`)=`Topic: ${val.topic}`
                if val.isInProgress
                  li='Still Voting: on'
                else
                  li='Still Voting: off'
              li=`Expring time: ${timeString[index][0]} ${timeString[index][1]}`
      else
        h1 You haven't created any vote yet
        