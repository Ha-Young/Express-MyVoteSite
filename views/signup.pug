extends layout

block styles
  link(rel="stylesheet", href="/stylesheets/signup.css")

block content
  .signup
    form.signup-form(action="/signup" method="POST")
      h1 Sign up
      .signup-container
        .signup-field
          input(type="text" name="username" id="username" placeholder="username" required)
        .signup-field
          input(type="text" name="firstname" id="firstname" placeholder="firstname" required)
        .signup-field
          input(type="text" name="lastname" id="lastname" placeholder="lastname" required)
        .signup-field
          input(type="email" name="email" id="email" placeholder="email" required)
        .signup-field.password
          input(type="password" name="password" id="password" placeholder="password should be longer than 10 characters." required)
        .signup-field.password
          input(type="password" name="confirm_password" id="confirm_password" placeholder="confirmation password" required)
        if errorMessage
          h3.errorMessage #{errorMessage}
      input.button(type="submit" value="CREATE ACCOUNT")
      .login Already have an account?
        a(href="/auth/login") LOGIN
