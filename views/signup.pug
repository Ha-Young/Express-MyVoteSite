extends layouts/main

block content
    .signup-container
        .form-box
            .signup-title 회원가입
            form(action="/signup" method="post")
                .id-input-box
                    input(type="text" name="email" placeholder="이메일" required=true)
                .pw-input-box
                    input(type="password" name="password" placeholder="비밀번호" required=true)
                .pw-input-box
                    input(type="password" name="password2" placeholder="비밀번호 확인" required=true)
                .name-input-box
                    input(type="text" name="name" placeholder="이름" required=true)
                .signup-button-input-box
                    input(type="submit" value="가입하기")