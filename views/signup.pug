extends layouts/main

block append head
	link(rel="stylesheet" href="/stylesheets/style.css")
	link(rel="stylesheet" href="/stylesheets/auth.css")

block content
	body
		.auth-form-container.signup-form-container
			h1.auth-form-title.signup-form-title Sign Up
			form(action="/users/signUp", method="post").auth-form.signup-form
				.auth-form__input-container.signup-form__input
					label.form__label(for="name") 이름
					input(type="text", name="name", placeholder="Username", required=true)
				.auth-form__input-container.signup-form__input
					label.form__label(for="email") 이메일
					input(type="email", name="email", placeholder="you@example.com", required=true)
				.auth-form__input-container.signup-form__input
					label.form__label(for="password") 비밀번호
					input(type="password", name="password", placeholder="••••••••", required=true, minlength="8")
				.auth-form__input-container.signup-form__input
					label.form__label(for="passwordConfirm") 비밀번호 확인
					input(type="password", name="passwordConfirm", placeholder="••••••••", required=true, minlength="8")
				.auth-form-buttons-container
					.auth-form__input.form-button-container
						button(type="submit", value="Sign Up").auth-form-button.main-button Sign Up
					.auth-form-button-container
							a(href="/users/login").auth-form-button.sub-button Log In
			.logo-container
				span.logo-main Vani
				span.logo-sub Vote
