doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet/less" type="text/css" href="/stylesheets/header.less")
    link(rel="stylesheet/less" type="text/css" href="/stylesheets/footer.less")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/v4-shims.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous")
  body
    header.header
      .header__front
        a.header__icon(href="/")
          i.fas.fa-vote-yea#mainIcon
        h1.header___title Vote!
      .header__search
      .header__buttons
        if (user)
          a.btn.btn-primary(href="/votings/new") create Vote!
          a.btn.btn-primary(href="/votings/:_id") my Votes
          a.btn.btn-primary(href="/signOut") sign Out
        else
          a.btn.btn-primary(href="/votings/new") create Vote!
          a.btn.btn-primary(href="/signin") sign In
          a.btn.btn-primary(href="/signup") sign Up
    block content
    footer.footer footer
    script(src="javascripts/less/less.js" type="text/javascript")
