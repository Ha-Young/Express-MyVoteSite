header.header
  .menu-circle
  .search-bar
    input(type="text" placeholder="Search")
  .header-profile
    .header-profile
      if (currentUser.avatar)
        img.profile-img(src=currentUser.avatar alt="user-avatar")
      else
        img.profile-img(src="/img/guest.svg" alt="user-avatar")
      if (currentUser.id)
        span.current-user Hello #{currentUser.name}
      else
        span.current-user Hello Guest
