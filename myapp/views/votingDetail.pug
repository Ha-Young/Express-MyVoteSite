extends ./layout.pug

block stylesheet
  link(rel='stylesheet', href='/stylesheets/voting-detail.css')

block content
  - const progress = isClosed ? "투표 종료" : "투표 중"
  section.detail
    h2 #{title}
    div.detail-status
      div.detail-progress #{progress}
      div.detail-time
        div
          | 시작 시간
          |  #{startLocalTime.month}월 #{startLocalTime.date}일
          |  #{startLocalTime.hour}시 #{startLocalTime.minute}분
        div
          | 종료 시간
          |  #{endLocalTime.month}월 #{endLocalTime.date}일
          |  #{endLocalTime.hour}시 #{endLocalTime.minute}분
    div.detail-author 작성자 #{author}
    div.detail-item-container
      - for (let i = 0; i < votingItems.length; i++)
        - const {item, count} = votingItems[i]
        div.detail-item(data-id=_id) #{item} #{count}
    div.detail-button
      a(href="/") 돌아가기
      div 삭제
  script(src="/javascripts/votingDetail.js")
