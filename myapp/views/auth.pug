extends ./layout.pug

block stylesheet
  link(rel='stylesheet', href='/stylesheets/signup.css')

block content
  - const submitBtnValue = isSignUp ? "Sign up" : "Login"
  - const submitAction = isSignUp ? "/signup" : "login"

  form.auth(action=submitAction, method="post")
    if isSignUp
      input.input-text(type="text", name="name", placeholder="이름을 입력하세요 : )", autocomplete="off")
    input.input-text(type="email", name="email", placeholder="이메일주소를 입력하세요 : )", autocomplete="off")
    input.input-text(type="password", name="password", placeholder="비밀번호를 입력하세요 : )", autocomplete="off")
    input.btn(type="submit", value=submitBtnValue)
